<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarheight"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <net.suntrans.bikecharge.view.ScrollChildSwipeRefreshLayout
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp">

                    <net.suntrans.bikecharge.view.CircleImageView
                        android:id="@+id/header"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/my_head" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:layout_toRightOf="@+id/header"
                        android:orientation="vertical"
                        android:paddingBottom="4dp"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="用户名"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/textLogin"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:text="登录 | 注册"
                            android:textColor="#0000ff"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    style="@style/line_horizontal_middle_gray"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip" />

                <RelativeLayout
                    android:id="@+id/vip"
                    android:layout_width="fill_parent"
                    android:layout_height="59.0dip"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ff"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:src="@drawable/icon_huiyuan" />

                    <TextView
                        style="@style/setting_about_item_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@+id/ff"
                        android:text="会员" />

                    <TextView
                        android:id="@+id/isVip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/iconRight"
                        android:gravity="center"
                        android:text="--"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@id/iconRight"
                        style="@style/setting_about_item_right_image"
                        android:layout_width="42.659973dip"
                        android:layout_height="42.659973dip"
                        android:background="@drawable/icon_list_arrow"
                        android:visibility="visible" />
                </RelativeLayout>

                <ImageView
                    style="@style/line_horizontal_middle_gray"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/yuer"
                    android:layout_width="fill_parent"
                    android:layout_height="59.0dip"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/bb"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:src="@drawable/icon_yuer" />

                    <TextView
                        style="@style/setting_about_item_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@+id/bb"
                        android:text="余额" />

                    <TextView
                        android:id="@+id/yuerValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/yuerIcon"
                        android:gravity="center"
                        android:text="--"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/yuerIcon"
                        style="@style/setting_about_item_right_image"
                        android:layout_width="42.659973dip"
                        android:layout_height="42.659973dip"
                        android:background="@drawable/icon_list_arrow"
                        android:visibility="visible" />
                </RelativeLayout>

                <ImageView
                    style="@style/line_horizontal_middle_gray"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip" />

                <RelativeLayout
                    android:id="@+id/baogao"
                    android:layout_width="fill_parent"
                    android:layout_height="59.0dip"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/cc"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:src="@drawable/ic_report" />

                    <TextView
                        style="@style/setting_about_item_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@+id/cc"
                        android:text="充电报告" />

                    <ImageView
                        style="@style/setting_about_item_right_image"
                        android:layout_width="42.659973dip"
                        android:layout_height="42.659973dip"
                        android:background="@drawable/icon_list_arrow"
                        android:visibility="visible" />
                </RelativeLayout>
                <ImageView
                    style="@style/line_horizontal_middle_gray"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip" />

                <RelativeLayout
                    android:id="@+id/message"
                    android:layout_width="fill_parent"
                    android:layout_height="59.0dip"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/gg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:src="@drawable/ic_msg" />

                    <TextView
                        style="@style/setting_about_item_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@+id/gg"
                        android:text="消息中心" />

                    <ImageView
                        style="@style/setting_about_item_right_image"
                        android:layout_width="42.659973dip"
                        android:layout_height="42.659973dip"
                        android:background="@drawable/icon_list_arrow"
                        android:visibility="visible" />
                </RelativeLayout>

                <ImageView
                    style="@style/line_horizontal_middle_gray"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip" />

                <RelativeLayout
                    android:id="@+id/jiankong"
                    android:layout_width="fill_parent"
                    android:layout_height="59.0dip"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/dd"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:src="@drawable/icon_jiance" />

                    <TextView
                        style="@style/setting_about_item_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@+id/dd"
                        android:text="充电监控" />

                    <ImageView
                        style="@style/setting_about_item_right_image"
                        android:layout_width="42.659973dip"
                        android:layout_height="42.659973dip"
                        android:background="@drawable/icon_list_arrow"
                        android:visibility="visible" />
                </RelativeLayout>

                <ImageView
                    style="@style/line_horizontal_middle_gray"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip" />

                <RelativeLayout
                    android:id="@+id/setting"
                    android:layout_width="fill_parent"
                    android:layout_height="59.0dip"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ee"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16.0dip"
                        android:src="@drawable/icon_about" />

                    <TextView
                        style="@style/setting_about_item_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toRightOf="@+id/ee"
                        android:text="关于" />

                    <ImageView
                        style="@style/setting_about_item_right_image"
                        android:layout_width="42.659973dip"
                        android:layout_height="42.659973dip"
                        android:background="@drawable/icon_list_arrow"
                        android:visibility="visible" />
                </RelativeLayout>


                <ImageView
                    style="@style/line_horizontal_middle_gray"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip" />

                <TextView
                    android:id="@+id/tuichi"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="#f00"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/line_horizontal_middle_gray"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </net.suntrans.bikecharge.view.ScrollChildSwipeRefreshLayout>
</LinearLayout>